<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/x-icon" href="./IMG/logo.png">
    <title>GVN-CANTEEN</title>

    <!-- Custom fonts for this template-->
    <link href="./vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="./css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <div id="wrapper">

        <%- include ('sidebar') %>

        <div id="content-wrapper" class="d-flex flex-column">

            <div id="content">

                <%- include ('topbar') %>
                
                <div class="container-fluid">

                    <div class="row">

                        <div class="col-lg-15">

                            <!-- Circle Buttons -->
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Add Categories</h6>
                                </div>
                                <div class="card-body">
                                    <form method="post" action="/addcategory" enctype="multipart/form-data"> 
                                    <p>Category ID:</p>
                                    <div class="mb-2">
                                        <input type="text" id="categoryid" name="categoryid" placeholder="Category ID">
                                    </div>
                                    <p>Category Name:</p>
                                    <div class="mb-2">
                                        <input type="text" id="categoryname" name="categoryname" placeholder="Category Name">
                                    </div>
                                    <p>Category Image:</p>
                                    <div class="mb-2">
                                        <input type="file" id="categoryImage" name="categoryImage" value="">
                                    </div>
                                    <p>Category Description:</p>
                                    <div class="mb-2">
                                        <textarea id="categoryDescription" name="categoryDescription" placeholder="Description" rows="5" cols="40">
                                        </textarea>
                                    </div>
                                    <div>
                                        <button style="padding-left: 20px; padding-right: 20px; border: 1px solid rgb(156, 78, 211); border-radius: 15px; color: azure; background-color: rgb(156, 78, 211); font-size: smaller;">Add</button>
                                    </div>

                                </form>
                                </div>
                                <h4 style="padding-left: 20px;"><% if (message) { %>
                                    <p><%= message %></p>
                                  <% } %></h4>
                            </div>

                            

                        </div>

                        
                        </div>

                    </div>

                </div>
                <!-- /.container-fluid -->
                <!-- Footer -->
                 <%- include ('footer') %>
                <!-- End of Footer -->
            </div>
            <!-- End of Main Content -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Bootstrap core JavaScript-->
    <script src="./vendor/jquery/jquery.min.js"></script>
    <script src="./vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="./vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="./js/sb-admin-2.min.js"></script>

</body>

</html>